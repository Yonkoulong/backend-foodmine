generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String  @unique
  hash     String
  hashRt   String?

  firstName   String?
  lastName    String?
  phoneNumber String?
  email       String?
  role        String?

  @@map("user")
}

model Table {
  id        Int      @id @default(autoincrement())
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  name  String
  code  String  @unique
  Order Order[]

  @@map("table")
}

model Dish {
  id        Int      @id @default(autoincrement())
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String @unique
  price       Float
  status      Boolean
  description String?
  image       String?

  @@map("dish")
}

model Order {
  id        Int      @id @default(autoincrement())
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  status Boolean
  total  Float

  dishes Json

  tableId Int
  table   Table @relation(fields: [tableId], references: [id])

  @@map("order")
}
